<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WeChatClicker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 主要品牌颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- 状态栏和导航栏颜色 -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/backgroundLight</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- 文本颜色 -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        
        <!-- Material组件样式 -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>
    
    <!-- 卡片样式 -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/divider</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>
    
    <!-- 按钮样式 -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- 开关样式 -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>